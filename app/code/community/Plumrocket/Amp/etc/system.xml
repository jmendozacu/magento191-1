<config>
    <tabs>
        <plumrocket>
            <label>
            <![CDATA[
                <div style="padding-left:22px; background: url(data:image/png;base64,) left 50% no-repeat;">Plumrocket Inc.</div> ]]>
            </label>
            <sort_order>101</sort_order>
        </plumrocket>
    </tabs>
    <sections>
        <pramp>
            <label>Accelerated Mobile Pages</label>
            <tab>plumrocket</tab>
            <sort_order>102</sort_order>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general>
                    <label>General</label>
                    <expanded>1</expanded>
                    <sort_order>1</sort_order>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <version translate="label">
                            <frontend_type>text</frontend_type>
                            <frontend_model>pramp/system_config_version</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </version>
                        <enable translate="label">
                            <label>Enable Extension</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <serial translate="label">
                            <label>Serial Key</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>plumbase/system_config_form_field</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[
                                Your can find <strong>Serial Key</strong> in your account at <a target="_blank" href="https://store.plumrocket.com/downloadable/customer/products/">store.plumrocket.com</a>. For manual <a target="_blank" href="http://wiki.plumrocket.com/wiki/License_Installation">click here</a>.
                            ]]></comment>
                        </serial>
                        <pages translate="label">
                            <label>AMP Enabled On</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>pramp/system_config_source_page</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </pages>
                        <force_mobile translate="label">
                            <label>Force AMP On Mobile Devices</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                 Automatically display AMP version of site to all mobile users who opened your store directly. If this option is disabled, the user will see non-amp pages when arriving directly (not from Google Search Results).
                            ]]></comment>
                        </force_mobile>
                        <force_tablet translate="label">
                            <label>Force AMP On Tablet Devices</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><force_mobile>1</force_mobile></depends>
                            <comment><![CDATA[
                                 Automatically display AMP version of site to all tablet users who opened your store directly.
                            ]]></comment>
                        </force_tablet>
                        <load_over_cdn translate="label">
                            <label>Load All AMP Pages Over CDN</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>65</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                 All AMP pages will be loaded directly from AMP project CDN (cdn.ampproject.org), not from your server. Gives faster page load time, but pages might be cached for a long time.
                            ]]></comment>
                        </load_over_cdn>
                        <ignore_page_amp_cdn translate="label">
                            <label>Ignore AMP CDN for Urls</label>
                            <frontend_type>textarea</frontend_type>
                            <comment>You can disable AMP CDN on specific pages. Enter each path in new line.</comment>
                            <sort_order>66</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><load_over_cdn>1</load_over_cdn></depends>
                        </ignore_page_amp_cdn>
                        <additional type="group" translate="label">
                            <label>Additional Settings</label>
                            <frontend_class>config-advanced</frontend_class>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <fields>
                                <amp_option_iframe translate="label">
                                    <label>Enable AMP Iframe With Product Options</label>
                                    <frontend_type>select</frontend_type>
                                    <source_model>adminhtml/system_config_source_yesno</source_model>
                                    <sort_order>1</sort_order>
                                    <show_in_default>10</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </amp_option_iframe>
                                <amp_iframe_path translate="label">
                                    <label>AMP Iframe Path</label>
                                    <frontend_type>text</frontend_type>
                                    <sort_order>20</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                    <depends><amp_option_iframe>1</amp_option_iframe></depends>
                                </amp_iframe_path>
                            </fields>
                        </additional>
                    </fields>
                </general>
                <design translate="label">
                    <label>Design</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <front_design type="group" translate="label">
                            <label>Color Scheme</label>
                            <expanded>1</expanded>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <fields>
                                <navigation_menu_text_color>
                                    <label>Navigation Menu Text Color</label>
                                    <frontend_type>text</frontend_type>
                                    <validate>color{hash:true, required:true}</validate>
                                    <sort_order>0</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </navigation_menu_text_color>
                                <link_color translate="label">
                                    <label>Link Color</label>
                                    <frontend_type>text</frontend_type>
                                    <validate>color{hash:true, required:true}</validate>
                                    <sort_order>10</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </link_color>
                                <link_color_hover translate="label">
                                    <label>Link Color (On Hover)</label>
                                    <frontend_type>text</frontend_type>
                                    <validate>color{hash:true, required:true}</validate>
                                    <sort_order>20</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </link_color_hover>
                                 <price_text_color translate="label">
                                    <label>Price Text Color</label>
                                    <frontend_type>text</frontend_type>
                                    <validate>color{hash:true, required:true}</validate>
                                    <sort_order>25</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </price_text_color>
                                <button_bg_color translate="label">
                                    <label>Button Background Color</label>
                                    <frontend_type>text</frontend_type>
                                    <validate>color{hash:true, required:true}</validate>
                                    <sort_order>30</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </button_bg_color>
                                <button_bg_color_hover translate="label">
                                    <label>Button Background Color (On Hover)</label>
                                    <frontend_type>text</frontend_type>
                                    <validate>color{hash:true, required:true}</validate>
                                    <sort_order>40</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </button_bg_color_hover>
                                <button_text_color translate="label">
                                    <label>Button Text Color</label>
                                    <frontend_type>text</frontend_type>
                                    <validate>color{hash:true, required:true}</validate>
                                    <sort_order>50</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </button_text_color>
                                <button_text_color_hover translate="label">
                                    <label>Button Text Color (On Hover)</label>
                                    <frontend_type>text</frontend_type>
                                    <validate>color{hash:true, required:true}</validate>
                                    <sort_order>60</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </button_text_color_hover>
                            </fields>
                        </front_design>
                        <product_page_add_logo type="group" translate="label">
                            <label>Logo</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <fields>
                                 <logo translate="label">
                                    <label>Logo Image</label>
                                    <frontend_type>image</frontend_type>
                                    <backend_model>pramp/system_config_source_logo</backend_model>
                                    <base_url type="media" scope_info="1">pramp/logo</base_url>
                                    <sort_order>10</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </logo>
                                 <logo_width translate="label">
                                    <label>Logo Width(px)</label>
                                    <frontend_type>text</frontend_type>
                                    <sort_order>10</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </logo_width>
                                <logo_height> translate="label">
                                    <label>Logo Height(px)</label>
                                    <frontend_type>text</frontend_type>
                                    <sort_order>20</sort_order>
                                    <show_in_default>1</show_in_default>
                                    <show_in_website>1</show_in_website>
                                    <show_in_store>1</show_in_store>
                                </logo_height>
                            </fields>
                        </product_page_add_logo>
                    </fields>
                </design>
                <rtl translate="label">
                    <label>RTL Template</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled translate="label">
                            <label>Enable RTL Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                    </fields>
                </rtl>
            </groups>
        </pramp>
    </sections>
</config>