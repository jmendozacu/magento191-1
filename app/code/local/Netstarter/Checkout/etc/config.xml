<?xml version="1.0"?>
<config>
    <modules>
        <Netstarter_Checkout>
            <version>0.1.6</version>
        </Netstarter_Checkout>
    </modules>
    <global>
        <fieldsets>
            <checkout_onepage_quote>
                <customer_newslettersubscribed>
                    <to_customer>is_subscribed</to_customer>
                </customer_newslettersubscribed>
            </checkout_onepage_quote>
        </fieldsets>
        <blocks>
            <nscheckout>
                <class>Netstarter_Checkout_Block</class>
            </nscheckout>
            <checkout>
                <rewrite>
                    <onepage_login>Netstarter_Checkout_Block_Onepage_Login</onepage_login>
                    <onepage>Netstarter_Checkout_Block_Onepage</onepage>
                    <cart_sidebar>Netstarter_Checkout_Block_Cart_Sidebar</cart_sidebar>
                </rewrite>

            </checkout>
        </blocks>
        <helpers>
            <nscheckout>
                <class>Netstarter_Checkout_Helper</class>
            </nscheckout>
        </helpers>
        <models>
            <nscheckout>
                <class>Netstarter_Checkout_Model</class>
            </nscheckout>
        </models>
        <resources>
            <netstarter_checkout_setup>
                <setup>
                    <module>Netstarter_Checkout</module>
                    <class>Netstarter_Checkout_Model_Resource_Setup</class>
                </setup>
            </netstarter_checkout_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <checkout>
                <args>
                    <modules>
                        <Netstarter_Checkout before="Mage_Checkout">Netstarter_Checkout</Netstarter_Checkout>
                    </modules>
                </args>
            </checkout>
        </routers>
        <events>
            <sales_quote_item_collection_products_after_load>
                <observers>
                    <decorator>
                        <class>nscheckout/observer</class>
                        <method>addModelDecoration</method>
                    </decorator>
                </observers>
            </sales_quote_item_collection_products_after_load>

            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <netstarter_sales_onepage>
                        <type>singleton</type>
                        <class>nscheckout/observer</class>
                        <method>setShippingCommentToQuote</method>
                    </netstarter_sales_onepage>
                </observers>
            </checkout_controller_onepage_save_shipping_method>

            <checkout_type_onepage_save_order>
                <observers>
                    <netstarter_sales_onepage>
                        <type>singleton</type>
                        <class>nscheckout/observer</class>
                        <method>setShippingCommentToOrder</method>
                    </netstarter_sales_onepage>
                </observers>
            </checkout_type_onepage_save_order>
        </events>
    </frontend>

</config>