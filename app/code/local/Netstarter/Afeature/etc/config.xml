        <layout>
            <updates>
                <afeature>
                    <file>afeature.xml</file>
                </afeature>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <afeature>
                <class>Netstarter_Afeature_Model</class>
                <resourceModel>afeature_mysql4</resourceModel>
            </afeature>
            <afeature_mysql4>
                <class>Netstarter_Afeature_Model_Mysql4</class>
                <entities>
                    <afeature>
                        <table>net_afeature</table>
                    </afeature>
                </entities>
            </afeature_mysql4>
        </models>
        <resources>       
            <afeature_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </afeature_write>
            <afeature_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </afeature_read>
            <afeature_setup>
                <setup>
                    <module>Netstarter_Afeature</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </afeature_setup>
        </resources>
        <blocks>
            <afeature>
                <class>Netstarter_Afeature_Block</class>
            </afeature>
        </blocks>
        <helpers>
            <afeature>
                <class>Netstarter_Afeature_Helper</class>
            </afeature>
        </helpers>
    </global>
