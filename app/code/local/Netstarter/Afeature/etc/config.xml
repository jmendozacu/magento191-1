<?xml version="1.0"?>
<config>
    <modules>
        <Netstarter_Afeature>
            <version>0.3.0</version>
        </Netstarter_Afeature>
    </modules>
    <frontend>
        <routers>
            <afeature>
                <use>standard</use>
                <args>
                    <module>Netstarter_Afeature</module>
                    <frontName>afeature</frontName>
                </args>
            </afeature>
        </routers>
        <layout>
            <updates>
                <afeature>
                    <file>afeature.xml</file>
                </afeature>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <afeature>
                <use>admin</use>
                <args>
                    <module>Netstarter_Afeature</module>
                    <frontName>afeature</frontName>
                </args>
            </afeature>
        </routers>
    </admin>
