<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Netstarter_Faq>
			<active>true</active>
			<codePool>local</codePool>
			<version>0.1.0</version>
		</Netstarter_Faq>
	</modules>

	<admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Netstarter_Faq before="Mage_Adminhtml">Netstarter_Faq_Adminhtml</Netstarter_Faq>
                    </modules>
                </args>
            </adminhtml>
        </routers>
	</admin>

    <adminhtml>
        <layout>
            <updates>
                <faq>
                    <file>faq.xml</file>
                </faq>
            </updates>
        </layout>
    </adminhtml>

	<frontend>
		<routers>
			<faq>
				<use>standard</use>
				<args>
					<module>Netstarter_Faq</module>
					<frontName>faq</frontName>
				</args>
			</faq>
		</routers>
		<translate>
			<modules>
				<Netstarter_Faq>
					<files>
						<default>Netstarter_Faq.csv</default>
					</files>
				</Netstarter_Faq>
			</modules>
		</translate>
		<layout>
			<updates>
				<faq>
					<file>faq.xml</file>
				</faq>
			</updates>
		</layout>
	</frontend>

	<global>
		<helpers>
			<netstarter_faq>
				<class>Netstarter_Faq_Helper</class>
			</netstarter_faq>
		</helpers>

		<blocks>
			<netstarter_faq>
				<class>Netstarter_Faq_Block</class>
			</netstarter_faq>
		</blocks>

		<models>
			<netstarter_faq>
				<class>Netstarter_Faq_Model</class>
				<resourceModel>netstarter_faq_mysql4</resourceModel>
			</netstarter_faq>
			<netstarter_faq_mysql4>
				<class>Netstarter_Faq_Model_Mysql4</class>
				<entities>
					<category>
						<table>net_faq_category</table>
					</category>
					<category_item>
						<table>net_faq_category_item</table>
					</category_item>
                    <category_store>
                        <table>net_faq_category_store</table>
                    </category_store>
					<faq>
						<table>net_faq</table>
					</faq>
					<faq_store>
						<table>net_faq_store</table>
					</faq_store>
				</entities>
			</netstarter_faq_mysql4>
		</models>

		<resources>
			<faq_setup>
				<setup>
					<module>Netstarter_Faq</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</faq_setup>
			<faq_write>
				<connection>
					<use>core_write</use>
				</connection>
			</faq_write>
			<faq_read>
				<connection>
					<use>core_read</use>
				</connection>
			</faq_read>
		</resources>
	</global>

</config>
